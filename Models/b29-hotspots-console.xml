<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>

 <name>Pedestal Hotspots</name>
 <background>Aircraft/b29/Models/transparent.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>
 <instruments>
  <instrument>
   <name>Pedestal</name>
   <x>512</x>
   <y>384</y>
   <w>1024</w>
   <h>768</h>
   <w-base>1024</w-base>
   <h-base>1024</h-base>
   <layers>
    <layer>
     <name>background</name>
     <texture>
      <path>Aircraft/b29/Models/hotspot.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
    </layer>
   </layers>
   <actions>

