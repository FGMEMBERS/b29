      <command>property-adjust</command>
      <property>_____</property>
      <step>_____</step>
      <min>_____</min>
      <max>_____</max>
      <wrap>_____</wrap>
     </binding>
    </action>
    -->

    <action>
     <button>0</button>
     <x>-290</x>
     <y>195</y>
     <w>50</w>
     <h>50</h>
     <binding>
      <command>property-adjust</command>
      <property>/controls/lighting/landing-lights-left</property>
      <step>1</step>
      <min>0</min>
      <max>3</max>
      <wrap>true</wrap>
     </binding>
    </action>

    <action>
     <button>0</button>
     <x>-230</x>
     <y>195</y>
     <w>50</w>
     <h>50</h>
     <binding>
      <command>property-adjust</command>
      <property>/controls/lighting/landing-lights-right</property>
      <step>1</step>
      <min>0</min>
      <max>3</max>
      <wrap>true</wrap>
     </binding>
    </action>

    <action>
     <button>0</button>
     <x>-375</x>
     <y>195</y>
     <w>50</w>
     <h>50</h>
     <binding>
      <command>property-adjust</command>
      <property>/controls/lighting/tail-nav-lights</property>
      <step>1</step>
      <min>0</min>
      <max>3</max>
      <wrap>true</wrap>
     </binding>
    </action>

    <action>
     <button>0</button>
     <x>-430</x>
     <y>195</y>
     <w>50</w>
     <h>50</h>
     <binding>
      <command>property-adjust</command>
