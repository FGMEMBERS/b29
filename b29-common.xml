<?xml version="1.0"?>
<!--
B-29 Superfortress for FlightGear
Common definitions
-->

<PropertyList>
 <sim>
  <description>Boeing B-29 Superfortress</description>

  <model>
   <path>Aircraft/b29/Models/b29-model.xml</path>
   <shadow type="bool">true</shadow>
  </model>

  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>

  <panel>
   <visibility>false</visibility>
  </panel>

  <chase-distance-m type="double" archive="y">-90.0</chase-distance-m>

