  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y" type="double">-0.67</x-offset-m>
    <y-offset-m archive="y" type="double">0.9</y-offset-m>
    <!-- changes for difference between the origin and the CG -->
    <!-- <z-offset-m archive="y" type="double">2.3</z-offset-m> -->
    <z-offset-m archive="y" type="double">-8.7</z-offset-m>
    <pitch-offset-deg archive="y">-10.0</pitch-offset-deg>
   </config>
  </view>

  <flaps>
   <setting archive="y">0.0</setting>
   <setting archive="y">0.05</setting>    <!-- 2.5 -->
   <setting archive="y">0.12</setting>    <!-- 5 -->
   <setting archive="y">0.24</setting>    <!-- 10 -->
   <setting archive="y">0.55</setting>    <!-- 25 -->
   <setting archive="y">1.0</setting>     <!-- 45 -->
  </flaps>

  <sound>
   <audible>true</audible>
   <path>Aircraft/Generic/generic-sound.xml</path>
  </sound>
 </sim>

 <controls>
  <gear>
   <nosewheel-caster type="bool" archive="y">true</nosewheel-caster>
   <antiskid type="bool" archive="y">false</antiskid>
  </gear>
 </controls>

 <systems>
  <electrical>
   <path>Aircraft/Generic/generic-electrical.xml</path>
  </electrical>
 </systems> 

 <input>
  <keyboard>
   <key n="4">
    <name>Ctrl-D</name>
    <desc>Open/Close bomb bay doors</desc>
    <binding>
     <command>nasal</command>
     <script>b29.toggleDoor()</script>
    </binding>
   </key>
  </keyboard>
 </input>

 <nasal>
  <b29>
   <file>Aircraft/b29/b29.nas</file>
  </b29>
 </nasal>

</PropertyList>
